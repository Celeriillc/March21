<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorBackgroundPurple"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingBottom="0dp"
            android:paddingTop="20dp" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <LinearLayout
                    android:id="@+id/profilepictureclipper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/circular_image_background_white">

                    <ImageView
                        android:id="@+id/profilePic"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:scaleType="centerCrop" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="10dp"
                    android:paddingEnd="0dp"
                    android:layout_gravity="center">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="1"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="10dp"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:text="name"/>

                        <TextView
                            android:id="@+id/timestamp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:textSize="12sp"
                            android:textStyle="italic"
                            android:text="date"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/classreciepient"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="15dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:text="class"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtstory"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingBottom="5dp"
                    android:paddingEnd="15dp"
                    android:paddingStart="15dp"
                    android:paddingTop="5dp"
                    android:textSize="13sp"
                    android:textColor="@android:color/black"
                    android:text="Feed"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/imagecontainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">

                <LinearLayout
                    android:id="@+id/layoutimageone"
                    android:layout_width="match_parent"
                    android:layout_height="310dp"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:minWidth="300dp"
                    android:maxWidth="320dp"
                    android:minHeight="300dp"
                    android:maxHeight="320dp">

                    <LinearLayout
                        android:id="@+id/storyimageonecontainer"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <LinearLayout
                            android:id="@+id/storyimageoneclipper"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="1dp"
                            android:background="@drawable/rounded_corner_image_background">

                            <ImageView
                                android:id="@+id/storyimageone"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:adjustViewBounds="true"
                                android:scaleType="centerCrop"
                                android:visibility="visible"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutimagetwo"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:weightSum="2"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/storyimagetwocontainer"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1">

                            <LinearLayout
                                android:id="@+id/storyimagetwoclipper"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="1dp"
                                android:background="@drawable/rounded_corner_image_background">

                                <ImageView
                                    android:id="@+id/storyimagetwo"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:adjustViewBounds="true"
                                    android:layout_gravity="center"
                                    android:scaleType="centerCrop"
                                    android:visibility="visible" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layoutimagethree"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:weightSum="2"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/storyimagethreecontainer"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                                <LinearLayout
                                    android:id="@+id/storyimagethreeclipper"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="1dp"
                                    android:background="@drawable/rounded_corner_image_background">

                                    <ImageView
                                        android:id="@+id/storyimagethree"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:adjustViewBounds="true"
                                        android:layout_gravity="center"
                                        android:scaleType="centerCrop"
                                        android:visibility="visible" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/storyimagefourclipper"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_margin="1dp"
                                android:background="@drawable/rounded_corner_image_background">

                                <RelativeLayout
                                    android:id="@+id/layoutimagefour"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <ImageView
                                        android:id="@+id/storyimagefour"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:adjustViewBounds="true"
                                        android:layout_gravity="center"
                                        android:scaleType="centerCrop"
                                        android:visibility="visible" />

                                    <View
                                        android:id="@+id/moreimagesscrim"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="#77000000"/>

                                    <TextView
                                        android:id="@+id/moreimagestext"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:textColor="@color/white"
                                        android:gravity="center_horizontal|center_vertical"
                                        android:textSize="30sp"
                                        android:text="5+"/>

                                </RelativeLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="0.2dp"
                android:layout_marginTop="15dp"
                android:background="#eeeeee"
                android:visibility="gone"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:paddingBottom="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/likebutton"
                    android:layout_width="43dp"
                    android:layout_height="23dp"
                    android:paddingLeft="15dp"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_favorite_border_black_24dp"
                    />

                <TextView
                    android:id="@+id/likenumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:layout_gravity="center_vertical"/>

                <ImageView
                    android:id="@+id/commentbutton"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="5dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_comment_black_24dp"
                    />

                <TextView
                    android:id="@+id/commentnumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:layout_gravity="center_vertical"/>

            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="0.2dp"
                android:background="#eeeeee"
                android:visibility="gone"/>

            <LinearLayout
                android:id="@+id/commentlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="0dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/firstcommentlayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="15dp"
                    android:paddingBottom="5dp"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/commenterpictureclipper"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:background="@drawable/circular_image_background_white">

                            <ImageView
                                android:id="@+id/commenterpic"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:scaleType="centerCrop" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/commenterpictureclipper"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/commentposter"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="10dp"
                                    android:maxLines="1"
                                    android:ellipsize="end"
                                    android:textColor="@android:color/black"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:text="name"/>

                                <TextView
                                    android:id="@+id/time"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:maxLines="1"
                                    android:ellipsize="end"
                                    android:textStyle="italic"
                                    android:textSize="12sp"
                                    android:text="time"/>
                            </LinearLayout>

                            <TextView
                                android:id="@+id/comment"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:textSize="13sp"
                                android:textColor="@android:color/black"
                                android:text="comment"/>
                        </LinearLayout>
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/createcommentlayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/profilepictureclipper2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/circular_image_background_white">

                        <ImageView
                            android:id="@+id/posterpic"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:scaleType="centerCrop"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/addacomment"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingTop="15dp"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp"
                        android:paddingBottom="15dp"
                        android:hint="Add a comment"
                        android:background="@drawable/custom_edit_text_for_comment_story_home"
                        android:textColorHint="#CCCCCC"
                        android:layout_gravity="center_vertical"
                        android:maxHeight="160dp"
                        android:textColor="#777777"
                        android:textSize="13sp"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>