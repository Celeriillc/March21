<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_edit_parent_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <include android:id="@+id/hometoolbar"
        layout="@layout/home_toolbar"/>

    <ScrollView
        android:id="@+id/superlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@android:color/white">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp">

                <ImageView
                    android:id="@+id/imagebackgroundone"
                    android:layout_width="148dp"
                    android:layout_height="148dp"
                    android:background="@drawable/circular_image_background_white"/>

                <ImageView
                    android:id="@+id/imagebackgroundtwo"
                    android:layout_width="142dp"
                    android:layout_height="142dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/circular_image_background_white" />

                <LinearLayout
                    android:id="@+id/newprofilepicturelayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/circular_image_background_white">

                    <ImageView
                        android:id="@+id/profilepicture"
                        android:layout_width="142dp"
                        android:layout_height="142dp"
                        android:scaleType="centerCrop"
                        android:background="@drawable/roundedbutton" />

                </LinearLayout>

                <View
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignEnd="@id/imagebackgroundtwo"
                    android:layout_marginEnd="0dp"
                    android:background="@drawable/circular_image_background_accent" />

                <ImageView
                    android:id="@+id/taptoupload"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentBottom="false"
                    android:layout_alignEnd="@id/imagebackgroundtwo"
                    android:layout_marginEnd="7dp"
                    android:layout_marginTop="111dp"
                    android:src="@drawable/ic_camera_alt_black_24dp" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/firstnamelayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:layout_marginStart="20sp"
                    android:text="First Name"
                    android:textColor="@color/colorBottomNavigationIconGray"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/firstname"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginStart="20sp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="20sp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/edittext_background"
                    android:hint="First Name"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/darker_gray"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/middlenamelayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20sp"
                    android:text="Middle Name"
                    android:textColor="@color/colorBottomNavigationIconGray"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/middlename"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="20sp"
                    android:layout_marginEnd="20sp"
                    android:layout_marginBottom="5dp"
                    android:hint="Middle Name"
                    android:maxLines="1"
                    android:inputType="text"
                    android:textSize="13sp"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/darker_gray"
                    android:background="@drawable/edittext_background" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lastnamelayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20sp"
                    android:text="Last Name"
                    android:textColor="@color/colorBottomNavigationIconGray"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/lastname"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="20sp"
                    android:layout_marginEnd="20sp"
                    android:layout_marginBottom="5dp"
                    android:hint="Last Name"
                    android:maxLines="1"
                    android:inputType="text"
                    android:textSize="13sp"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/darker_gray"
                    android:background="@drawable/edittext_background" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/genderlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20sp"
                    android:text="Gender"
                    android:textColor="@color/colorBottomNavigationIconGray"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/gender"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|start"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="20sp"
                    android:layout_marginEnd="20sp"
                    android:layout_marginBottom="5dp"
                    android:textSize="12sp"
                    android:textColor="@android:color/black"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:background="@drawable/edittext_background"
                    android:hint="Gender"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/writesomething"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorBottomNavigationIconGray"
                    android:textSize="15sp"
                    android:text="Other Information"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="#aaaaaa"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"/>

            <LinearLayout
                android:id="@+id/phonenumberlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20sp"
                    android:text="Phone Number"
                    android:textColor="@color/colorBottomNavigationIconGray"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginStart="20sp"
                    android:layout_marginEnd="20sp">

                    <TextView
                        android:id="@+id/phonenumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="85dp"
                        android:paddingEnd="20sp"
                        android:gravity="center_vertical"
                        android:layout_centerVertical="true"
                        android:hint="Phone Number"
                        android:maxLines="1"
                        android:textSize="13sp"
                        android:textColor="@android:color/black"
                        android:textColorHint="@android:color/darker_gray"
                        android:background="@drawable/edittext_background" />

                    <ImageView
                        android:id="@+id/flag"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginStart="15dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_nigeria" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/flag"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:textSize="13sp"
                        android:textColor="@color/black"
                        android:text="+234" />

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/maritalstatuslayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20sp"
                    android:text="Relationship Status"
                    android:textColor="@color/colorBottomNavigationIconGray"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/maritalstatus"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|start"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="20sp"
                    android:layout_marginEnd="20sp"
                    android:layout_marginBottom="5dp"
                    android:textSize="12sp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="@android:color/black"
                    android:background="@drawable/edittext_background"
                    android:hint="Relationship Status"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/biolayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginStart="20sp"
                    android:text="Bio"
                    android:textColor="@color/colorBottomNavigationIconGray"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/composebio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20sp"
                    android:layout_marginEnd="20sp"
                    android:layout_marginTop="5dp"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:minLines="5"
                    android:gravity="top"
                    android:inputType="textMultiLine"
                    android:hint="Compose message"
                    android:background="@drawable/edittext_background"
                    android:focusable="true"
                    android:focusableInTouchMode="true"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="This is one of the top sections parents, schools and other teachers see when they visit your profile. Tell us some awesome things about yourself"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="30dp"
                    android:paddingStart="20sp"
                    android:paddingEnd="20sp"
                    android:textColor="@color/colorBottomNavigationIconGray"
                    android:textSize="12sp"/>
            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>

