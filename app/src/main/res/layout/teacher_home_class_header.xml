    </LinearLayout>

    <View
        android:layout_width="15dp"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="15dp"
        android:background="#aaaaaa" />

</LinearLayout>